<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CheckAL.ResultBAC">
    <ContentPage.Content>
        <StackLayout BackgroundColor = "Black">
            <Frame BackgroundColor="DarkOrange" Padding="24" CornerRadius="0">
            <Label Text="Result" HorizontalTextAlignment="Center" TextColor="White" FontSize="20" />
        </Frame>
            <StackLayout BackgroundColor = "Black">
            <Label Text="Calculate BAC" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
            
            <Label Text="BAC" x:Name="BAC" Grid.Row="0" Grid.Column="0" FontSize="20" TextColor="White"/> 
            <Label Text="Level of BAC" x:Name="Level" FontSize="20" TextColor="White"/>
            <Label Text="Time to sober in" x:Name="Time_Sober" FontSize="20" TextColor="White"/>
            <Label Text="Time to sit behind the wheel" x:Name="Time_behind" FontSize="20" TextColor="White"/>
            <Label Text="Legal Limit in Thailand" FontSize="20" x:Name="Limit" TextColor="White"/>
            <Label Text="{ Binding TotalSell, StringFormat='{0:C2}' }" TextColor="White" />
                
            </StackLayout>


                
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CheckAL.SecondPage">
    <ContentPage.Content>


        <StackLayout Margin="20,20,20,0">
            <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Label Text="Calculate BAC" HorizontalTextAlignment="Center" TextColor="White" FontSize="20" />
        </Frame>
            <Label Text="Gender" FontSize="13" />
            <Entry x:Name="Gender" />
            <Label Text="Weight" FontSize="13" />
            <Entry x:Name="wight" MaxLength="3" Placeholder="Number" TextChanged="OnEntryTextChanged"
       Completed="OnEntryCompleted" Keyboard="Numeric"/>
            <Label Text="Height" FontSize="13" />
            <Entry x:Name="Hight" MaxLength="3" Placeholder="Number" TextChanged="OnEntryTextChanged"
       Completed="OnEntryCompleted" Keyboard="Numeric"/>
            <Label Text="AlCohol Type" FontSize="13" />
            <Entry x:Name="Alcohol"/>
            <Label Text="Start Time" FontSize="13" />
            <TimePicker x:Name="StartTime"/>
            <Label Text="End Time" FontSize="13" />
            <TimePicker x:Name="EndTime"/>


      
       
            <Button Text="Calculate" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Button_Clicked"/>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>
